<assembly>
    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
	<fileSet>
	      <directory>target</directory>
	      <outputDirectory>/lib</outputDirectory>
	      <includes>
		<include>*.jar</include>
	      </includes>
	</fileSet>
	<fileSet>
	      <directory>src/main/resources</directory>
	      <outputDirectory></outputDirectory>
	      <includes>
		<include>META-INF/plugin.xml</include>
	      </includes>
	</fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <includes>
                <include>mks-idea:mks-idea</include>
                <include>com.mks:mkscmapi</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
